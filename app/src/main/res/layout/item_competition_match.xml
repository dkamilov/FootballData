<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/color_shark">

    <TextView
        android:id="@+id/textMatchStatus"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@id/textMatchDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Finished"
        style="@style/TextMatchStatusOverline"/>

    <TextView
        android:id="@+id/textMatchDate"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22 Июн, 2020"
        style="@style/TextMatchStatusOverline"/>

    <TextView
        android:id="@+id/textMatchScore"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMatchStatus"
        tools:text="10 - 10"
        style="@style/TextMatchScore"/>

    <TextView
        android:id="@+id/textHomeTeam"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="@id/textMatchScore"
        app:layout_constraintEnd_toStartOf="@+id/textMatchScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMatchScore"
        tools:text="Manchester United FC" />

    <TextView
        android:id="@+id/textAwayTeam"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical|start"
        app:layout_constraintBottom_toBottomOf="@id/textMatchScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textMatchScore"
        app:layout_constraintTop_toTopOf="@id/textMatchScore"
        tools:text="Arsenal FC" />

</androidx.constraintlayout.widget.ConstraintLayout>